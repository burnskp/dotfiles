font-family = DejaVu Sans Mono
font-feature = -calt, -liga, -dlig
{{ if eq .theme "light" -}}
theme = Catppuccin Latte
{{ else -}}
theme = cobalt2-custom
{{ end }}

window-decoration = none
{{ if eq .chezmoi.os "darwin" -}}
command = "/opt/homebrew/bin/tmux new-session -ADs $(hostname -s)"
