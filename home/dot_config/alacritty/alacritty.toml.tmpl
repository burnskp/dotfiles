[env]
TERM = "xterm-256color"

[general]
import = [ "~/.config/alacritty/catppuccin-latte.toml" ]

[font]
normal = { family = "DejaVuSansM Nerd Font" }
{{ if eq .chezmoi.os "darwin" -}}
size = 21
{{ else }}
size = 16
{{ end }}


[window]
decorations = "None"
padding.x = 4
padding.y = 4
{{ if eq .chezmoi.os "darwin" -}}
startup_mode = "Maximized"
option_as_alt = "Both"

[terminal]
shell = { program = "/bin/zsh", args = [
  "-lc",
  "tmux attach || tmux new-session -s main",
] }
{{ end -}}
