set-environment -g TMUX_PLUGIN_MANAGER_PATH '~/.local/share/tmux/plugins'

# List of plugins
set -g @tpm_plugins 'fcsonline/tmux-thumbs \
catppuccin/tmux \
tmux-plugins/tmux-copycat \
tmux-plugins/tmux-prefix-highlight \
tmux-plugins/tpm'

# prefix-highlight
set -g @prefix_highlight_show_copy_mode 'on'
set -g @prefix_highlight_prefix_prompt 'Wait'
set -g @prefix_highlight_copy_prompt 'Copy'

# tmux-thumbs
set -g @thumbs-command 'tmux set-buffer -- {} && tmux paste-buffer'
set -g @thumbs-key f
set -g @thumbs-regexp-1 '[a-zA-Z0-9\./-]+:[a-zA-Z0-9\./-]+'
set -g @thumbs-regexp-2 '[a-z]+(?:-[a-z0-9]+)+-[a-z0-9]+'
set -g @thumbs-regexp-3 '[a-z]+(?:-[a-z0-9]+)'
set -g @thumbs-unique enabled
set -g @thumbs-upcase-command 'tmux set-buffer -w -- {}'

# colors
set -g @catppuccin_flavor 'latte'
set -g @catppuccin_status_background "#{@thm_crust}"
set -g @catppuccin_window_current_text " #W"
set -g @catppuccin_window_text " #W"

set -g status-left ""
set -g status-right '#{prefix_highlight} #[fg=#{@thm_text}]'
set -g @thumbs-bg-color "#{@thm_base}"
set -g @thumbs-fg-color "#{@thm_green}"
set -g @thumbs-hint-bg-color "#{@thm_base}"
set -g @thumbs-hint-fg-color "#{@thm_yellow}"
set -g @thumbs-multi-bg-color "#{@thm_base}"
set -g @thumbs-multi-fg-color "#{@thm_yellow}"
set -g @thumbs-select-bg-color "#{@thm_base}"
set -g @thumbs-select-fg-color "#{@thm_blue}"

unbind C-b
unbind f
set -g prefix C-Space

set-option -g focus-events on
set-option -g renumber-windows on

# screen ^C c
unbind ^C
bind ^C new-window

# detach ^D d
unbind ^D
bind ^D detach

# use hjkl to move between panes
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# use HJKL to resize panes
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

# Allow <prefix>C-l to clear the screen
bind C-l send-keys 'C-l'

# Bind ;/' to create split windows
bind "'" split-window -v
bind \; split-window -h

# Kill window
bind q confirm kill-window
bind Q confirm kill-server

# Remap copy/paste to act more like vi
set -s set-clipboard on

setw -g mode-keys vi
bind Space copy-mode
bind C-Space copy-mode
unbind p
bind p paste-buffer
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection-and-cancel
bind-key -T copy-mode-vi 'r' send -X rectangle-toggle

# Navigate sessions / windows
unbind s
bind s run-shell tmux-switch-sessions.sh
bind S display-popup -E "tmux list-sessions | cut -d":" -f1 | fzf | xargs tmux switch-client -t"
bind m switch-client -t main
bind b switch-client -l

# application specific popups
unbind n
bind n display-popup -w 80% -h 80% -E tmux-notes.sh
unbind N
bind N display-popup -w 80% -h 80% -E tmux-notes.sh grep
unbind t
bind t display-popup -w 80% -h 80% -E tmux-journal.sh

# shortcut for synchronize-panes toggle
bind C-s set-window-option synchronize-panes

# Integrate using C-h/j/k/l to move between vim and tmux panes
version_pat='s/^tmux[^0-9]*([.0-9]+).*/\1/p'

is_vim="ps -o state= -o comm= -t '#{pane_tty}' \
    | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?g?(view|n?vim?x?)(diff)?$'"
bind-key -n C-h if-shell "$is_vim" "send-keys C-h" "select-pane -L"
bind-key -n C-j if-shell "$is_vim" "send-keys C-j" "select-pane -D"
bind-key -n C-k if-shell "$is_vim" "send-keys C-k" "select-pane -U"
bind-key -n C-l if-shell "$is_vim" "send-keys C-l" "select-pane -R"
bind-key -n 'C-\' if-shell \"$is_vim\" 'send-keys C-\\'  'select-pane -l'

bind-key -T copy-mode-vi C-h select-pane -L
bind-key -T copy-mode-vi C-j select-pane -D
bind-key -T copy-mode-vi C-k select-pane -U
bind-key -T copy-mode-vi C-l select-pane -R
bind-key -T copy-mode-vi C-\\ select-pane -l

# Set r to reload source file
bind-key r source-file ~/.config/tmux/tmux.conf \; display-message "Config reloaded!"

# Renaming is handled by the shell
setw -g automatic-rename on
setw -g allow-rename on

# Switch to new session when current one is destroyed
set-option -g detach-on-destroy off

# Up history limit
set -g history-limit 50000

# remove delay when pressing <esc>
set -s escape-time 0

set -g set-titles off

# Set window notifications
set -g visual-activity off
set -g visual-bell off
set -g visual-silence on

# Start at 1 instead of 0
set -g base-index 1
set -g pane-base-index 1

# Change status line more often
set-option -g status-interval 5

set -as terminal-features ",xterm-ghostty:clipboard:extkeys:focus:hyperlinks:osc7:overline:RGB:strikethrough:sync:usstyle"

{{ if eq .chezmoi.os "darwin" -}}
set-environment -g PATH "/opt/homebrew/bin:/bin:/usr/bin"
{{ end -}}

run '~/.local/share/tmux/plugins/tpm/tpm'
